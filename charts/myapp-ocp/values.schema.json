{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Valeurs pour le chart myapp-ocp",
  "type": "object",
  "required": ["image"],
  "properties": {
    "replicaCount": {
      "type": "integer",
      "minimum": 1,
      "description": "Nombre de réplicas du Deployment"
    },
    "image": {
      "type": "object",
      "required": ["repository", "tag"],
      "properties": {
        "repository": {
          "type": "string",
          "description": "Dépôt d'images Docker"
        },
        "tag": {
          "type": "string",
          "description": "Tag de l'image Docker"
        },
        "pullPolicy": {
          "type": "string",
          "enum": ["IfNotPresent", "Always", "Never"],
          "description": "Politique de pull de l'image"
        }
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer"],
          "description": "Type de Service Kubernetes"
        },
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535,
          "description": "Port du Service"
        }
      }
    },
    "route": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Activer la création d'une Route OpenShift"
        },
        "host": {
          "type": "string",
          "description": "Nom d'hôte de la Route"
        }
      }
    }
  }
}
